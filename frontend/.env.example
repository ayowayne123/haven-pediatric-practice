# ------------------------------------------------------
# Sanity CMS Configuration
# ------------------------------------------------------

# Your Sanity project ID
NEXT_PUBLIC_SANITY_PROJECT_ID="your-project-id"

# Dataset name (commonly "production" or "development")
NEXT_PUBLIC_SANITY_DATASET="production"

# Optional – API version for the Sanity client
NEXT_PUBLIC_SANITY_API_VERSION="2024-10-28"

# Optional – URL where your Sanity Studio is deployed
# e.g., https://studio.yourdomain.com
NEXT_PUBLIC_SANITY_STUDIO_URL=""

# Private Read Token for server-side queries
# ⚠️ Keep this secret. Do not expose to client-side code.
SANITY_API_READ_TOKEN="YOUR_SANITY_READ_TOKEN_HERE"


# ------------------------------------------------------
# SMTP / Email Configuration
# ------------------------------------------------------

# SMTP host (e.g., Mailtrap, SendGrid, etc.)
SMTP_HOST="live.smtp.mailtrap.io"

# SMTP port: 465 for SSL, 587 for TLS
SMTP_PORT=465

# SMTP username provided by your email service
SMTP_USER="smtp@mailtrap.io"

# SMTP password provided by your email service
SMTP_PASS="YOUR_SMTP_PASSWORD_HERE"

# Receiver email for contact forms or notifications
RECEIVER_EMAIL="Receiver@email.com"

# Whether to use a secure (SSL) connection (true/false)
SMTP_SECURE=true
